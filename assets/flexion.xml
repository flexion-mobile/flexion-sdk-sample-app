<?xml version="1.0" encoding="UTF-8"?>
<flexion>
    <billing>
        <testData>
            <!-- Some example items -->
            <items>
                <item id="1023608" type="IN_APP" price="£1.00" title="Seeds" description="Grow some beautiful new flowers" priceAmountMicros="1000000" priceCurrencyCode="GBP" />
                <item id="1023609" type="SUBSCRIPTION" price="£5.00" title="Magical Water" description="Permanently increase the size and beauty of the flowers you grow" priceAmountMicros="5000000" priceCurrencyCode="GBP" />
                <item id="1023610" type="IN_APP" price="£10.00" title="Premium Theme" description="A tasteful new theme for your favourite flower game" priceAmountMicros="10000000" priceCurrencyCode="GBP" />
            </items>
            
            
            <purchases>
                <!-- An example purchase. This will simulate a purchase ready to be consumed on first start up -->
                <!--
                <purchase type="IN_APP" orderId="o1" itemId="1023608" purchaseTime="" state="PURCHASED" token="token_123" /> 
                -->
            </purchases>
            
            
            <isBillingSupported>
                <condition>
                    <input type="IN_APP"/>
                    <output billingResponse="OK"/>
                </condition>

                 <condition>
                    <input type="SUBSCRIPTION"/>
                    <output billingResponse="OK"/>
                </condition> 

            </isBillingSupported>
            
            <getPurchases>
                <!-- You can control which billingResponse should be returned for each <item> defined above -->
                <condition>
                    <input type="IN_APP">
                        <itemRef id="1023608" />
                    </input>
                    <output billingResponse="OK"/>
                </condition>
                <condition>
                    <input type="SUBSCRIPTION">
                        <itemRef id="1023609" />
                    </input>
                    <output billingResponse="OK"/>
                </condition>
                <condition>
                    <input type="IN_APP">
                        <itemRef id="1023610" />
                    </input>
                    <output billingResponse="OK"/>
                </condition>
            </getPurchases>

            <getItemDetails>
                <!-- You can control which billingResponse should be returned for each <item> defined above -->
                <condition>
                    <input type="IN_APP">
                        <itemRef id="1023608" />
                    </input>
                    <output billingResponse="OK"/>
                </condition>
                <condition>
                    <input type="SUBSCRIPTION">
                        <itemRef id="1023609" />
                    </input>
                    <output billingResponse="OK"/>
                </condition>
                <condition>
                    <input type="IN_APP">
                        <itemRef id="1023610" />
                    </input>
                    <output billingResponse="OK"/>
                </condition>
            </getItemDetails>
            
            <consumePurchase>
                <!-- This example relates to the example purchase in <purchases>. You can control which billingResponse should be returned for these purchases -->
                <condition>
                    <input purchaseToken="token_123"/>
                    <output billingResponse="OK"/>
                </condition>
            </consumePurchase>                
            
        </testData>
    </billing>
</flexion>